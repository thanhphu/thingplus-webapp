extends layout

block content
  div.container-fluid
    p Host detected as: #{host}
    if user
      p Welcome, #{user.fullName}
      p
        a.btn.btn-primary(role="button", href="/gateways") View gateways
      button.btn.btn-default Logout
    else
      p Welcome to my app, ready to get started?
      p
        a.btn.btn-primary(role="button", href="/login") Login now
      p
        span.small Don't have an account?
        span &nbsp;
        a.btn(href="/register") Register now
      